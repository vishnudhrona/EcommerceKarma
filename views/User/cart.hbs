<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container" style="padding-top: 80px;">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            {{!-- <th scope="col">Stock</th> --}}

                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>

                                <div class="media">
                                    <div class="d-flex">
                                        <img style="height: 80px; width: 80px;"
                                            src="/productImage/{{this.product.image1}}" alt="">
                                    </div>
                                    <div class="media-body">
                                        <p>{{this.product.name}}</p>
                                    </div>
                                </div>

                            </td>
                            <td>
                                <h5>{{this.product.offerprice}}</h5>
                            </td>
                            <td>
                                
                                <div class="container" style="display: flex;">
                                <div class="">
                                    <button class="cart-item-count btn btn-outline-dark" style="font-size: 5px; padding: 2px 8px;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',1)" class="" type="button"><i class="lnr lnr-chevron-up"></i></button>
                                    <span id="{{this.product._id}}">{{this.quantity}}</span>
                                    <button class="cart-item-count btn btn-outline-dark" style="font-size: 5px; padding: 2px 8px;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',-1)" class="" type="button"><i class="lnr lnr-chevron-down"></i></button>
                                </div>
                                </div>
                            </td>
                            <td>
                                {{!-- <h5 id="stock">{{this.product.stock}}</h5> --}}
                            </td>
                            <td>

                            </td>
                            <td>
                                <button class="btn btn-danger"
                                    onclick="deleteCartProduct('{{this._id}}','{{this.product._id}}')">X</button>
                            </td>
                        </tr>
                        {{/each}}
                        <tr class="bottom_button align-items-center">
                            <td>
                                {{#if errorMessage}}
                                <div class="">
                                    <a class="gray_btn" href="/shopproduct">Continue Shopping</a>
                                    <h3 style="padding-left: 380px; color: red;">{{errorMessage}}</h3>
                                </div>
                                {{/if}}

                            </td>
                            <td>

                            </td>
                            <td>

                            </td>
                            {{#unless errorMessage}}
                            <td>
                                <div class="cupon_text d-flex align-items-center">
                                    <span id="errorMg" style="color: red;"></span>
                                    <input type="text" name="coupon" id="couponCode" placeholder="Enter coupon code">
                                    <input type="text" name="userId" id="user" value="{{logIn._id}}" hidden>
                                    <button class="primary-btn" onclick="applyCoupon()">Apply</button>
                                    <a class="gray_btn" href="#" hidden>Close Coupon</a>
                                </div>
                            </td>
                            {{/unless}}
                        </tr>
                        <tr>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <h5>Total</h5>
                            </td>
                            <td>
                                <span id="total">{{total}}</span>
                            </td>
                        </tr>
                        <tr class="shipping_area">
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <h5></h5>
                            </td>
                            <td>
                                <div class="shipping_box">
                                    <ul class="list">
                                        <span style="font-weight: bold; color: black;">Coupon Details</span><br>
                                        <span id="discount"></span><br>
                                        <span id="percentage"></span><br>
                                        <span id="totall"></span>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <tr class="out_button_area">
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <div class="checkout_btn_inner d-flex align-items-center">
                                    {{!-- <a class="gray_btn" href="#" hidden>Continue Shopping</a> --}}
                                    <a class="primary-btn" href="/checkout">Proceed to checkout</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->


<script>
    function applyCoupon() {
        let coupon = document.getElementById('couponCode').value;
        console.log(coupon, 'uuuuuuuiiiiiiiiiii');
        $.ajax({
            url: '/applycoupon',
            data: {
                couponCode: coupon
            },
            method: 'post',
            success: (response) => {
                console.log(response, 'nnnnnnnnnnnnnjjjjjjjjjkkkkkkkk')
                if (response.error != true) {
                    document.getElementById('discount').innerHTML = "Discount Amount : ₹ " + response.discountAmount
                    document.getElementById('percentage').innerHTML = "Discount Percentage : " + response.couponData.couponPercentage + '%'
                    document.getElementById('totall').innerHTML = "Total : ₹" + response.couponApplyAmount
                    document.getElementById('total').innerHTML = "₹" + response.couponApplyAmount
                } else if (response.error) {
                    document.getElementById('errorMg').innerHTML = "invalid coupon"
                    alert("Invalid Coupon")
                    console.log("uuuuuuuuuuuuuuuuuuuu")
                }
                else if (response.invalidDate) {
                    alert("Invalid Date")
                    document.getElementById('errorMg').innerHTML = 'Expire coupon'
                }
            }
        })
    }
</script>

