<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css"></script>
<script src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<div class="clearfix"></div>

<div class="content-wrapper">
  <div class="container-fluid">


    {{#if signupstatus}}
    <h4>You are blocked Call your admin</h4>
    {{else}}
    <h4>WelCome</h4>
    {{/if}}

    <div class="row ">
      <div class="col-md-12 p-3">
        <div class="card ">
          <div class="card-body">
            <h5 class="card-title"></h5>
            <div class="table-responsive">
              <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th class="th-sm">No
                    </th>
                    <th class="th-sm">Name
                    </th>
                    <th class="th-sm">Email
                    </th>
                    <th class="th-sm">Status
                    </th>
                    <th class="th-sm">Action
                    </th>
                  </tr>
                </thead>
                <tbody>
                  {{#each user}}
                  <tr>
                    <th scope="row">{{math @index "+"1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>
                        {{#if signupstatus}}
                        <button type="button" class="btn btn-danger" disabled>inactive</button>
                        {{else}}
                        <button type="button" class="btn btn-success" disabled>Active</button>
                        {{/if}}
                      </td>
                     <td>
                        {{#if signupstatus}}
                        <a href="/admin/unblock?id={{this._id}}" class="btn btn-primary">Unblock</a>
                        {{else}}
                        <a href="/admin/block?id={{this._id}}" class="btn btn-danger">Block</a>
                        {{/if}}
                      </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!--start overlay-->
      <div class="overlay toggle-menu"></div>
      <!--end overlay-->

    </div>
    <!-- End container-fluid-->

  </div><!--End content-wrapper-->
  <!--Start Back To Top Button-->
  <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
  <!--End Back To Top Button-->
  <script>
    $(document).ready(function () {
      $('#dtBasicExample').DataTable();
      $('.dataTables_length').addClass('bs-select');
    });
  </script>