<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row ">
      <div class="col-md-12 p-3">
        <div class="card ">
          <div class="card-body">
            <h5 class="card-title"></h5>
            <div class="table-responsive">
              <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th class="th-sm">No
                    </th>
                    <th class="th-sm">Address
                    </th>
                    <th class="th-sm">Payment Mode
                    </th>
                    <th class="th-sm">Price
                    </th>
                    <th class="th-sm">status
                    </th>
                    <th class="th-sm">Product
                    </th>
                    <th class="th-sm">Activities
                    </th>
                  </tr>
                </thead>
                <tbody>
                  {{#each allOrder}}
                  <tr>
                    <th scope="row">{{math @index "+"1}}</th>
                    <td>
                      {{this.deliveryDetails.name}}<br>{{this.deliveryDetails.number}}<br>{{this.deliveryDetails.city}}<br>Zip:{{this.deliveryDetails.zip}}
                    </td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.status}}</td>
                    <td><a href="/admin/viewproduct?id={{this._id}}" class="btn btn-primary">View</a></td>
                    <td>
                      <!-- Example single danger button -->
                      <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"
                          aria-haspopup="true" aria-expanded="false">
                          Action
                        </button>
                        <div class="dropdown-menu">
                          {{#isEqual this.status 'placed'}}
                          <a class="dropdown-item" href="/admin/productshipped?id={{../this._id}}">Shipped</a>
                          <a class="dropdown-item" href="/admin/productcancel?id={{../this._id}}">Cancel Order</a>
                          {{/isEqual}}
                          {{#isEqual this.status 'shipped'}}
                          <a class="dropdown-item" href="/admin/productdelivered?id={{../this._id}}">Delivered</a>
                          <a class="dropdown-item" href="/admin/productcancel?id={{../this._id}}">Cancel Order</a>
                          {{/isEqual}}
                          {{#isEqual this.status 'delivered'}}
                          <h5 style="color: greenyellow;">Delivered</h5>
                          {{/isEqual}}


                        </div>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!--start overlay-->
      <div class="overlay toggle-menu"></div>
      <!--end overlay-->

    </div>
    <!-- End container-fluid-->

  </div><!--End content-wrapper-->
